{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "moduleSuffixes": ["", ".wx", ".we", ".app"],
    "types": ["miniprogram-api-typings"]
  },
  "include": [
    ".temp/**/*.ts",
    "app/**/*.ts",
    "app/**/*.wxs",
    "scripts/**/*.ts",
    "typings/**/*.ts",
    "commitlint.config.ts",
    "eslint.config.js",
    "gulpfile.cjs"
  ]
}
