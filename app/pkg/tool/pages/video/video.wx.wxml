<import src="/base/page.wxml" />
<wxs src="./video.wxs" module="video" />

<!-- 返回按钮 -->
<back-button wx:if="{{type === 'video'}}" />

<view wx:if="{{type === 'video'}}" class="video-page">
  <!-- 视频信息 -->
  <view class="video-info">
    <view class="name"><text>{{videoName}}</text></view>
    <view class="author"><text>—— {{videoAuthor }} ——</text></view>
  </view>
  <!-- 视频窗口 -->
  <video
    class="video-player"
    src="{{src}}"
    title="{{videoName}}"
    controls
    enable-auto-rotation
    picture-in-picture-mode="pop"
    catch:play="onVideoPlay"
    catch:waiting="onVideoWait"
    catch:error="onVideoError"
  />
  <!-- 视频列表 -->
  <view class="video-list-wrapper">
    <tab-bar nav-list="{{titles}}" height="{{height? height - 24: 300}}">
      <block
        wx:for="{{videoList}}"
        wx:key="title"
        wx:for-item="videoGroup"
        wx:for-index="groupIndex"
      >
        <scroll-view
          slot="page{{groupIndex + 1}}"
          type="list"
          enable-flex
          scroll-y
          class="video-list"
          style="height:{{height - 24}}px;"
        >
          <view
            wx:for="{{videoGroup.list}}"
            wx:key="name"
            class="video-item {{(groupIndex === groupID && listID === index) ? 'active' : ''}}"
            data-group-i-d="{{groupIndex}}"
            data-list-i-d="{{index}}"
            hover-class="button-hover"
            catch:tap="onListTap"
          >
            <view class="video-name"><text>{{item.name}}</text></view>
            <view class="video-author"><text>{{item.author}}</text></view>
          </view>
        </scroll-view>
      </block>
    </tab-bar>
  </view>
</view>
<template wx:else is="page" data="{{theme, page: video.page}}" />
