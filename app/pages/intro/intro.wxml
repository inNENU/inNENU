<import src="/base/template.wxml" />
<page-meta
  background-text-style="{{darkmode ? 'dark' : 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<license />
<view class="intro {{theme}} grey">
  <view
    class="search-navigation-bar"
    style="padding-top:{{statusBarHeight}}px;"
  >
    <view
      class="search-wrapper"
      style="width: calc(100% - {{menuSpace + 10}}px)"
    >
      <search
        custom-class="search"
        words="{{words}}"
        placeholder="搜索东师介绍"
        catch:searching="searching"
        catch:search="search"
      />
    </view>
  </view>
  <view
    class="search-nav-placeholder"
    style="height:{{statusBarHeight + 44}}px;"
  >
    到头啦~人家被你拉得好痛阿(*´д`*) 不许你再拉人家~╭(╯^╰)╮
  </view>
  <grid
    wx:for="{{items}}"
    wx:for-item="config"
    wx:key="header"
    config="{{config}}"
  />
  <view wx:if="{{more.length}}" class="more {{displayMore ? 'show': 'hide'}}">
    <view catch:tap="openMore" class="more-title">
      <text>更多内容</text>
      <view class="icon" catch:tap="toggleMore" />
    </view>
    <view class="more-list">
      <list config="{{ { header: false, items: moreItems } }}" />
    </view>
    <view class="more-content">
      <grid
        wx:for="{{more}}"
        wx:for-item="config"
        wx:key="header"
        config="{{config}}"
      />
    </view>
  </view>
</view>
