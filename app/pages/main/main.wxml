<import src="/base/template.wxml" />
<page-meta
  background-text-style="{{darkmode ? 'dark': 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<license />
<view class="{{theme}} main grey">
  <view
    class="search-navigation-bar"
    style="padding-top:{{statusBarHeight}}px;"
  >
    <view
      class="search-wrapper"
      style="width: calc(100% - {{menuSpace + 10}}px)"
    >
      <search
        custom-class="search"
        words="{{words}}"
        placeholder="搜索小程序"
        catch:searching="searching"
        catch:search="search"
      />
    </view>
  </view>
  <view
    class="search-nav-placeholder"
    style="height:{{statusBarHeight + 44}}px;"
  >
    到头啦~人家被你拉得好痛阿(*´д`*) 不许你再拉人家~╭(╯^╰)╮
  </view>
  <scroll-view scroll-y class="content">
    <template is="components" data="{{content: page.content}}" />
    <view class="widgets">
      <library-borrow-widget />
      <library-borrow-widget type="图书待还" />
      <starred-notice-widget />
      <starred-notice-widget type="收藏（小）" />
      <recent-notice-widget type="新闻" />
      <recent-notice-widget type="通知（小）" />
      <recent-notice-widget type="新闻（小）" />
      <card-balance-widget />
      <library-people-widget />
      <course-widget />
      <course-widget type="下节课程" />
      <course-widget type="今日课程（中）" />
      <course-widget type="课程表" />
    </view>
  </scroll-view>
</view>
