<import src="/base/template.wxml" />
<page-meta
  background-text-style="{{darkmode ? 'dark' : 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<view class="{{theme}} grey search-wrapper">
  <view
    class="left-button"
    style="top:{{statusBarHeight + 6}}px;"
    hover-class="button-hover"
    catch:tap="$bindBack"
  >
    <view class="icon-{{firstPage ? 'home' : 'back'}}" />
  </view>
  <view class="ios-navigation-bar" style="padding-top:{{statusBarHeight}}px;">
    <view class="ios-nav-title">搜索</view>
  </view>
  <view class="ios-nav-border" style="top:{{statusBarHeight + 44}}px;" />
  <view class="ios-nav-placeholder" style="height:{{statusBarHeight + 44}}px;">
    到头啦~人家被你拉得好痛阿(*´д`*) 不许你再拉人家~╭(╯^╰)╮
  </view>

  <search
    words="{{words}}"
    search-word="{{searchWord}}"
    catch:searching="searching"
    catch:search="search"
  />

  <view class="search-type">
    <view
      class="search-type-item {{type === 'all'? 'active': ''}}"
      data-type="all"
      catch:tap="changeSearchType"
      >全部</view
    >
    <view
      class="search-type-item {{type === 'guide'? 'active': ''}}"
      data-type="guide"
      catch:tap="changeSearchType"
      >指南</view
    >
    <view
      class="search-type-item {{type === 'intro'? 'active': ''}}"
      data-type="intro"
      catch:tap="changeSearchType"
      >介绍</view
    >
    <view
      class="search-type-item {{type === 'function'? 'active': ''}}"
      data-type="function"
      catch:tap="changeSearchType"
      >功能</view
    >
  </view>
  <block wx:if="{{result.length}}">
    <title config="{{ { text: '搜索结果' } }}" />
    <block wx:for="{{result}}" wx:key="title">
      <view
        wx:if="{{item.indexes}}"
        class="search-item content-item"
        hover-class="button-hover"
        data-url="{{'info?id=' + item.path + '&from=搜索'}}"
        catch:tap="$bindGo"
      >
        <view class="title">{{item.title}}</view>
        <view class="list">
          <block wx:for="{{item.indexes}}" wx:for-item="config">
            <view class="title" wx:if="{{config[0] === 'title'}}"
              >{{config[1]}}</view
            >
            <view class="heading" wx:elif="{{config[0] === 'heading'}}"
              >{{config[1]}}</view
            >
            <view class="text" wx:elif="{{config[0] === 'text'}}"
              >{{config[1].before}}<text class="keyword"
                >{{config[1].word}}</text
              >{{config[1].after}}</view
            >
            <view class="doc" wx:elif="{{config[0] === 'img'}}">
              <image class="icon" src="/base/doc/icon/{{config[1].icon}}.svg" />
              <view class="text">{{config[1].desc}}</view>
            </view>
            <view class="doc" wx:elif="{{config[0] === 'doc'}}">
              <image class="icon" src="/base/doc/icon/{{config[1].icon}}.svg" />
              <view class="text">{{config[1].name}}</view>
            </view>
            <view class="card" wx:elif="{{config[0] === 'card'}}">
              <view class="title">{{config[1].title}}</view>
              <view class="desc">{{config[1].desc}}</view>
            </view>
          </block>
        </view>
      </view>
      <view
        wx:else
        class="search-item page-item"
        data-url="{{item.url}}"
        catch:tap="$bindGo"
      >
        <image
          wx:if="{{icons[item.icon]}}"
          class="icon"
          src="{{icons[item.icon]}}"
        />
        <view class="title">{{item.title}}</view>
      </view>
    </block>
  </block>
  <view wx:else class="empty-hint">没有找到任何结果</view>

  <footer />

  <button
    class="scroll-top-button {{showBackToTop? 'show': ''}}"
    catch:tap="scrollTop"
  >
    <view class="icon" />
  </button>
</view>
