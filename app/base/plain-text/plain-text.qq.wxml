<wxs src="./plain-text.wxs" module="plainText" />

<template name="text">
  <block wx:if="{{config.tag === 'ol'}}">
    <view wx:for="{{config.text}}" wx:key="*this" class="text-list-item">
      <view class="text-marker">{{index + 1}}.</view>
      <text class="text-content" decode space="nbsp" selectable="{{selectable}}"
        ><text style="{{config.style || ''}}">{{item}}</text></text
      >
    </view>
  </block>

  <block wx:elif="{{config.tag === 'ul'}}">
    <view wx:for="{{config.text}}" wx:key="*this" class="text-list-item">
      <view class="text-marker">•</view>
      <text class="text-content" decode space="nbsp" selectable="{{selectable}}"
        ><text style="{{config.style || ''}}">{{item}}</text></text
      >
    </view>
  </block>

  <block wx:else>
    <view
      wx:for="{{config.text}}"
      wx:key="*this"
      class="paragraph-item"
      style="{{config.style || ''}}"
    >
      <text
        class="text-content"
        decode
        space="nbsp"
        style="{{plainText.getStyle(config, selectable)}}"
        selectable="{{selectable}}"
        ><text>{{item}}</text></text
      >
    </view>
  </block>
</template>

<view
  wx:if="{{plainText.isContainer(config.type)}}"
  class="hint-box-component {{config.type}}"
  hover-class="{{config.url ? 'hint-box-hover' : ''}}"
  data-url="{{config.url}}"
  catch:tap="$bindGo"
>
  <text
    wx:if="{{config.heading !== false}}"
    class="hint-box-title {{config.url ? 'access' : ''}}"
    selectable="{{selectable}}"
    >{{plainText.getTitle(config)}}</text
  >
  <template is="text" data="{{config, selectable}}" />
</view>
<!-- 段落标题 -->
<block wx:else>
  <text
    wx:if="{{config.heading}}"
    class="text-component-header"
    selectable="{{selectable}}"
    >{{config.heading === true ? '' : config.heading}}</text
  >
  <!-- 段落主体 -->
  <view class="text-component" style="{{plainText.getAlign(config.align)}}">
    <template is="text" data="{{config, selectable}}" />
  </view>
</block>
