<view
  class="doc"
  hover-class="button-hover"
  hover-stay-time="100"
  catch:tap="view"
>
  <!-- 文档图标 -->
  <image class="doc-icon" src="./icon/{{config.icon}}.svg" />
  <!-- 文档名称 -->
  <view class="doc-name"><text>{{config.name}}</text></view>
  <!-- 下载按钮 -->
  <view
    wx:if="{{config.downloadable !== false}}"
    class="download-button"
    hover-class="button-hover"
    hover-stay-time="100"
    catch:tap="download"
  >
    <image class="icon" src="./icon/download.svg" />
  </view>
  <!-- 查看按钮 -->
  <view
    class="view-button"
    hover-class="button-hover"
    hover-stay-time="100"
    catch:tap="view"
  >
    <image class="icon" src="./icon/view.svg" />
  </view>
</view>
