<import src="./components.wxml" />
<wxs src="./template.wxs" module="utils" />

<!-- loading -->
<template name="loading">
  <view class="loading-logo">
    <view class="logo">
      <view>in</view>
      <view>NENU</view>
    </view>
    <view class="shadow" />
    <view class="text">加载中...</view>
  </view>
</template>

<!-- page with navigation bar -->
<template name="page">
  <view
    wx:if="{{page}}"
    wx:scope-data="{{...page.scopeData}}"
    class="{{theme}} {{page.grey ? 'grey' : ''}}"
  >
    <!-- 错误显示 -->
    <block wx:if="{{page.error}}">
      <navbar nav="{{utils.getErrorNavbarConfig(page)}}" />
      <template is="error" data="{{ id: page.id, from: page.from }}" />
    </block>

    <!-- 加载页面 -->
    <view wx:elif="{{!page.content}}" class="loading-logo-wrapper">
      <back-button />
      <template is="loading" />
    </view>

    <block wx:else>
      <!-- 导航栏 -->
      <navbar nav="{{utils.getNavbarConfig(page)}}" />

      <view wx:if="{{page.outdated}}" class="outdated-banner"
        >页面内容缺少必要校对，可能已过时。Mr.Hope 会尽快校对并更新本内容!</view
      >

      <!-- 页面内容 -->
      <template
        is="components"
        data="{{ content: page.content || [], images: page.images || [], referer: page.title }}"
      />
      <share config="{{utils.getShareConfig(page)}}" />
      <footer
        wx:if="{{page.footer !== false}}"
        config="{{utils.getFooterConfig(page)}}"
      />
    </block>
  </view>
</template>

<!-- 错误文字 -->
<template name="error">
  <view class="error-wrapper">
    <icon type="warn" size="80" />
    <view class="error-text">十分抱歉，页面加载出错!</view>
    <view class="hint">您可以截屏本页面并点击下方按钮进行反馈</view>
    <view class="desc">
      <text>当前: {{ id || '未知' }}</text>
    </view>
    <view class="desc">
      <text>来源: {{ from || '未知' }}</text>
    </view>
    <button
      class="primary"
      type="primary"
      open-type="addFriend"
      open-id="868D7B2F0C609B4285698EAB77A47BA1"
    >
      反馈给 Mr.Hope
    </button>
  </view>
</template>
