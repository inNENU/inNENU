<!-- components -->
<template name="components">
  <block wx:if="{{content && content.length}}">
    <block wx:for="{{content}}" wx:key="id" wx:for-item="config">
      <block wx:if="{{!item.hidden}}">
        <template
          is="{{config.tag}}-component"
          data="{{config, images, index}}"
        />
      </block>
    </block>
  </block>
</template>

<template name="loading">
  <view class="loading-logo">
    <view class="logo">
      <view>in</view>
      <view>NENU</view>
    </view>
    <view class="shadow" />
    <view class="text">加载中...</view>
  </view>
</template>

<!-- page with navigation bar -->
<template name="page">
  <view
    wx:if="{{page}}"
    wx:scope-data="{{...page.scopeData}}"
    class="{{theme}} {{page.grey ? 'grey' : ''}}"
  >
    <!-- 错误显示 -->
    <block wx:if="{{page.error}}">
      <navbar nav="{{template.getErrorNavbarConfig(page)}}" />
      <template is="error" data="{{ id: page.id, from: page.from }}" />
    </block>

    <!-- 加载页面 -->
    <view wx:elif="{{!page.content}}" class="loading-logo-wrapper">
      <back-button />
      <template is="loading" />
    </view>

    <block wx:else>
      <!-- 导航栏 -->
      <navbar nav="{{template.getNavbarConfig(page)}}" />

      <view wx:if="{{page.outdated}}" class="outdated-banner"
        >页面内容缺少必要校对，可能已过时。Mr.Hope 会尽快校对并更新本内容!</view
      >

      <!-- 页面内容 -->
      <template
        is="components"
        data="{{ content: page.content || [], images: page.images || [] }}"
      />
      <share config="{{template.getShareConfig(page)}}" />
      <footer
        wx:if="{{page.footer !== false}}"
        config="{{template.getFooterConfig(page)}}"
      />
    </block>
  </view>
</template>

<!-- 错误文字 -->
<template name="error">
  <view class="error-wrapper">
    <icon type="warn" size="80" />
    <view class="error-text">十分抱歉，页面加载出错!</view>
    <view class="hint">您可以截屏本页面并点击下方按钮进行反馈</view>
    <view class="desc">
      <text>当前: {{ id || '未知' }}</text>
    </view>
    <view class="desc">
      <text>来源: {{ from || '未知' }}</text>
    </view>
    <button class="primary" type="primary" open-type="contact">
      反馈给 Mr.Hope
    </button>
  </view>
</template>
