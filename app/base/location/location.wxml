<wxs src="../../utils/map.wxs" module="helper" />
<view class="location-component">
  <map
    class="map"
    id="location"
    markers="{{helper.getMarkers(markers)}}"
    setting="{{helper.getSetting()}}"
    catch:markertap="markerTap"
    catch:callouttap="calloutTap"
  />
  <view class="footer">
    <view class="title"><text>{{title}}</text></view>
    <view class="actions">
      <view
        wx:if="{{hasDetail}}"
        class="action"
        hover-class="button-hover"
        catch:tap="detail"
      >
        <image class="icon" src="./icon/info.svg" />
      </view>
      <view
        wx:if="{{config.navigate !== false}}"
        class="action"
        hover-class="button-hover"
        catch:tap="navigate"
      >
        <image class="icon" src="/icon/navigate.svg" />
      </view>
    </view>
  </view>
</view>
