<view class="account">
  <!-- 高斯模糊背景 -->
  <image class="background" src="{{config.logo}}" mode="aspectFill" lazy-load />
  <view class="content">
    <!-- 图标 -->
    <image class="logo" src="{{config.logo}}" lazy-load />
    <!-- 名称 -->
    <view class="name"><text>{{config.name}}</text></view>
    <!-- 详情 -->
    <view wx:if="{{config.detail}}" class="detail">
      <text>{{config.detail}}</text>
    </view>
    <!-- 描述 -->
    <view wx:if="{{config.desc}}" class="desc border-top">{{config.desc}}</view>

    <view class="action-list">
      <view
        wx:if="{{config.qq || config.qqcode}}"
        class="action"
        hover-class="button-hover"
        hover-start-time="0"
        hover-stay-time="0"
        catch:tap="addQQ"
      >
        <image class="icon" src="/icon/qq.svg" />
      </view>
      <view
        wx:if="{{config.account}}"
        class="action"
        hover-class="button-hover"
        hover-stay-time="100"
        data-url="{{'wechat-detail?path=' + config.account}}"
        catch:tap="$bindGo"
      >
        <image class="icon" src="/icon/wechat.svg" />
      </view>
      <view
        wx:elif="{{config.wxid || config.wxcode}}"
        class="action"
        hover-class="button-hover"
        hover-start-time="0"
        hover-stay-time="0"
        catch:tap="addWechat"
      >
        <image class="icon" src="/icon/wechat.svg" />
      </view>
      <view
        wx:if="{{config.site}}"
        class="action"
        hover-class="button-hover"
        hover-start-time="0"
        hover-stay-time="0"
        catch:tap="openSite"
      >
        <image class="icon" src="./icon/web.svg" />
      </view>
      <view
        wx:if="{{config.mail}}"
        class="action"
        hover-class="button-hover"
        hover-start-time="0"
        hover-stay-time="0"
        catch:tap="copyEmail"
      >
        <image class="icon" src="./icon/mail.svg" />
      </view>
    </view>
  </view>
</view>
