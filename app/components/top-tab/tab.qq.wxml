<view class="tab-wrapper">
  <scroll-view
    class="tab-bar-wrapper"
    scroll-x
    scroll-into-view="tab-bar{{activeTab}}"
    scroll-with-animation
  >
    <view class="tab-bar">
      <view
        wx:for="{{navList}}"
        wx:key="index"
        class="item {{index === current ? 'active' : ''}}"
        id="tab-bar{{index}}"
        data-index="{{index}}"
        catch:tap="changeTab"
      >
        <view class="text">{{item}}</view>
      </view>
    </view>
  </scroll-view>

  <swiper
    class="page-wrapper"
    style="{{height ? 'height:' + (height - 37) + 'px;' : ''}}"
    current="{{current}}"
    bindchange="change"
    bindtransition="transition"
    bindanimationfinish="aminationFinish"
  >
    <swiper-item class="tab-page" wx:for="{{navList}}" wx:key="index">
      <slot name="page{{index + 1}}" />
    </swiper-item>
  </swiper>
</view>
