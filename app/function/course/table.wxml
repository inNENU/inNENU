<wxs src="./table.wxs" module="table" />
<wxs src="../../components/today-course/courseTable.wxs" module="utils" />
<wxs src="../utils/hash.wxs" module="hash" />
<page-meta
  background-text-style="{{darkmode ? 'dark' : 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<view class="{{theme}} course-table-wrapper">
  <header title="课程表" />

  <view class="course-table-actions">
    <picker
      class="picker"
      range="{{timeDisplays}}"
      value="{{timeIndex}}"
      bindchange="changeTime"
    >
      {{(timeDisplays[timeIndex])}}
    </picker>
    <picker
      class="picker"
      range="{{table.getWeek(weeks)}}"
      value="{{weekIndex}}"
      bindchange="changeWeek"
    >
      {{(table.getWeek(weeks)[weekIndex])}}
    </picker>
    <button
      class="refresh-button"
      type="default"
      size="mini"
      catch:tap="refreshCourseTable"
    >
      <text class="refresh-button-icon" />
    </button>
  </view>
  <view class="course-table">
    <view class="course-table-header">
      <view class="course-row-header"></view>
      <view
        wx:for="{{utils.weeks}}"
        wx:key="*this"
        class="course-table-header-item"
      >
        {{item}}
      </view>
    </view>
    <view class="course-table-body">
      <view
        class="course-table-row"
        wx:for="{{courseData}}"
        wx:for-item="row"
        wx:for-index="rowIndex"
      >
        <view class="course-row-header"> {{utils.times[rowIndex]}} </view>
        <view
          class="course-table-item"
          wx:for="{{row}}"
          wx:for-item="cell"
          wx:for-index="columnIndex"
        >
          <block
            wx:for="{{cell}}"
            wx:for-item="classItem"
            wx:for-index="classIndex"
            wx:key="cid"
          >
            <view
              wx:if="{{table.isMatchingWeek(weekIndex, classItem.weeks)}}"
              class="course-table-course-item course-item{{hash.getHashIndex(classItem.name)}}"
              data-row="{{rowIndex}}"
              data-column="{{columnIndex}}"
              data-cell="{{classIndex}}"
              data-class="{{classItem}}"
              catch:tap="showClassInfo"
            >
              <view class="name">{{classItem.name}}</view>
              <view>{{classItem .location}}</view></view
            >
          </block>
        </view>
      </view>
    </view>
  </view>
</view>
