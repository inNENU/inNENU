<wxs src="./utils.wxs" module="utils" />
<page-meta
  background-text-style="{{darkmode ? 'dark' : 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<view class="{{theme}}">
  <header title="招生计划" />
  <view class="selector">
    <picker range="{{years}}" value="{{yearIndex}}" bindchange="yearChange">
      年份: {{years[yearIndex]}}
    </picker>
    <picker
      range="{{provinces}}"
      value="{{provinceIndex}}"
      bindchange="provinceChange"
    >
      省份: {{provinces[provinceIndex]}}
    </picker>
    <picker
      range="{{planTypes}}"
      value="{{planTypeIndex}}"
      bindchange="planTypeChange"
    >
      计划性质: {{planTypes[planTypeIndex]}}
    </picker>
    <picker
      range="{{majorTypes}}"
      value="{{majorTypeIndex}}"
      bindchange="majorTypeChange"
    >
      专业类别: {{majorTypes[majorTypeIndex]}}
    </picker>

    <picker range="{{reformTypes}}" bindchange="reformTypeChange">
      科类: {{reformTypes[reformTypeIndex]}}
    </picker>

    <button type="primary" class="primary" catch:tap="getPlan">查询</button>
  </view>
  <footer />
</view>

<popup
  config="{{popupConfig}}"
  show="{{results.length > 0}}"
  catch:confirm="close"
  catch:close="close"
>
  <view wx:for="{{results}}" wx:key="major" class="plan-item">
    <view class="header">{{item.major}}: {{item.count}}人</view>
    <view class="info">
      <view><text class="label">科类:</text>{{item.planType}}</view>
      <view><text class="label">专业属性:</text>{{item.majorType}}</view>
      <view><text class="label">学制:</text>{{item.year}}</view>
      <view
        ><text class="label">学费:</text>{{item.fee == '0'? '免费':
        item.fee}}</view
      >
      <view>
        <block wx:if="{{item.remark}}">
          <text class="label">备注:</text>{{item.remark}}
        </block>
      </view>
    </view>
  </view>
</popup>
