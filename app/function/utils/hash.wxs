function getHash(content) {
  var hash = 1;

  for (var i = 0; i < content.length; i++) {
    // Jenkins one-at-a-time
    hash += content.charCodeAt(i);
    hash += hash << 10;
    hash ^= hash >> 6;
  }

  hash += hash << 3;
  hash ^= hash >> 11;

  return hash;
}

function getHashIndex(content, total) {
  return getHash(content) % (total || 9);
}

module.exports = {
  getHash: getHash,
  getHashIndex: getHashIndex,
};
