<page-meta
  background-text-style="{{darkmode ? 'dark': 'light'}}"
  background-color="{{color.bgColor}}"
  background-color-top="{{color.bgColorTop}}"
  background-color-bottom="{{color.bgColorBottom}}"
  root-background-color="{{color.bgColor}}"
/>
<view class="{{theme}} info-detail">
  <navbar nav="{{ { title: pageTitle } }}" />
  <view class="title">{{title}}</view>
  <error-hint wx:if="{{ status === 'error' }}" catch:retry="getInfo" />
  <login-hint wx:elif="{{ status === 'login' }}" source="{{pageTitle}}" />
  <view class="content">
    <block wx:if="{{content}}">
      <view class="info">
        <text class="time">
          <text class="icon-font icon-time" />
          <text>{{time}}</text>
        </text>
        <text class="eye">
          <text class="icon-font icon-eye" />
          <text>{{pageView}}</text>
        </text>
        <text wx:if="{{from}}" class="teacher">
          <text class="icon-font icon-teacher" />
          <text>{{from}}</text>
        </text>
        <text wx:if="{{author || editor}}" class="author">
          <text class="icon-font icon-author" />
          <text>{{author || editor}}</text>
        </text>
      </view>
      <rich-text class="rich-media" nodes="{{content}}" space="nbsp" />
    </block>
  </view>
  <view class="star-button" size="mini" catch:tap="toggleStar">
    <view class="icon {{starred? 'starred': ''}}" />
  </view>
  <share config="{{share}}" />
  <footer />
</view>
