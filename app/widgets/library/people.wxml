<view class="library-people widget wrapper-class">
  <view class="widget-header">图书馆在馆人数</view>
  <view class="widget-body">
    <view class="widget-content">
      <view class="info" style="--progress: {{benbu / benbuMax * 100}}%">
        <text class="label">本部:</text>
        <text class="value">{{benbu || '-'}} / {{benbuMax || '-'}}人</text>
      </view>
      <view class="info" style="--progress: {{jingyue / jingyueMax * 100}}%">
        <text class="label">净月:</text>
        <text class="value">{{jingyue || '-'}} / {{jingyueMax || '-'}}人</text>
      </view>
    </view>
  </view>
</view>
