      wx:if="{{enableBalance}}"
      class="refresh-button"
      type="default"
      size="mini"
      catch:tap="refreshBalance"
    >
      <text class="refresh-button-icon" />
    </button>
  </view>
  <error-hint
    wx:if="{{ status === 'error' }}"
