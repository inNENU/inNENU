{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "moduleSuffixes": ["", ".wx", ".we", ".qq", ".app"],
    "noEmit": true,
    "types": ["miniprogram-api-typings"]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.wxs",
    "scripts/**/*.ts",
    "typings/**/*.ts",
    "commitlint.config.ts",
    "eslint.config.js",
    "gulpfile.cjs"
  ]
}
